{
  "name": "@flours/main",
  "version": "0.0.0",
  "description": "Main overarching repo for flours",
  "scripts": {
    "start:ws": "node services/ws/dist/index.js",
    "start:api": "node services/api/dist/index.js",
    "start:frontend": "cd services/frontend && npm run start",
    "build": "pnpm recursive run build",
    "lint": "npx eslint services/ --ext .ts",
    "lint:fix": "npx eslint services/ --ext .ts --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.21.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zaida04/flours.git"
  },
